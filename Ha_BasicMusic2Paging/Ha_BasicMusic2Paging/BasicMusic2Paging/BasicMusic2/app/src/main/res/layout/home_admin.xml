<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/shape_login_background"
            >

            <ImageButton
                android:id="@+id/openNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/menubar" />

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/profile" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/openNav"
                android:layout_centerInParent="true"
                android:src="@drawable/producer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="DashBoard"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </RelativeLayout>

        <Button
            android:id="@+id/btnManagerUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout_header"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/violet"
            android:drawableStart="@drawable/categorymusic"
            android:text="Quản Lý Người Dùng" />
        <Button
            android:id="@+id/btnManagerSinger"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/btnManagerUser"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/violet"
            android:drawableStart="@drawable/categorymusic"
            android:text="Quản Lý Nghệ Sỹ" />
        <Button
            android:id="@+id/btnManagerMusic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/btnManagerSinger"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/violet"
            android:drawableStart="@drawable/categorymusic"
            android:text="Quản Lý Nhạc" />

        <Button
            android:id="@+id/btnManagerCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/btnManagerMusic"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/violet"
            android:drawableStart="@drawable/categorymusic"
            android:text="Quản Lý Thể Loại" />

        <Button
            android:id="@+id/btnManagerVideo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/btnManagerCategory"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/violet"
            android:drawableStart="@drawable/categorymusic"
            android:text="Quản Lý Video" />



    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navgationView"
        android:layout_width="200dp"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_nav_admin"
        app:menu="@menu/menu_admin"
        android:layout_height="match_parent"
        />

</androidx.drawerlayout.widget.DrawerLayout>